<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postforum">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner4"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/pp_postforum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile"
                    android:layout_margin="8dp"
                    />


                <TextView
                    android:id="@+id/account_name_postforum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="account_name"
                    android:textSize="11dp"
                    android:layout_marginTop="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/edit_comment_postforum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:background="@drawable/white"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toStartOf="@id/pp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_postforum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/white"
                    android:src="@drawable/image_button"
                    android:layout_margin="8dp"
                    />

                <ImageButton
                    android:id="@+id/link_button_postforum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/white"
                    android:src="@drawable/link_button"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    />

                <ImageButton
                    android:id="@+id/money_button_postforum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/money_forum_2"
                    android:background="@drawable/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/upload_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/white"
                        android:src="@drawable/upload_button" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bar"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:background="@drawable/rounded_corner_2"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            />


        <ImageButton
            android:id="@+id/weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weather"
            android:background="@drawable/rounded_corner_2"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/donasi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/money"
            android:background="@drawable/rounded_corner_2"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:background="@drawable/rounded_corner_2"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

</RelativeLayout>