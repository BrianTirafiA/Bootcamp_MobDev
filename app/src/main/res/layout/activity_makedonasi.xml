<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".makedonasi">

    <View
        android:id="@+id/view"
        android:layout_width="400dp"
        android:layout_height="555dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/makedonasi_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".makedonasi">

        <TextView
            android:id="@+id/textAksiDonasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="AKSI DONASI"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/FormNamaAksi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_cornerblack"
            android:hint="Nama Aksi"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="#7A7A7A"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/FormTargetDonasi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_cornerblack"
            android:hint="Target Donasi"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="#7A7A7A"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/FormTambahGambar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_cornerblack"
            android:hint="Tambah Gambar"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="#7A7A7A"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/FormMetodePembayaran"
            android:layout_width="350dp"
            android:layout_height="122dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_cornerblack"
            android:hint="Tambah Metode Pembayaran"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="#7A7A7A"
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedrec_button"
            android:text="TAMBAH"
            android:textColor="@color/white"
            android:textSize="27sp" />

    </LinearLayout>
</RelativeLayout>