<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_bg"
    tools:context=".profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_rectangle"
            >>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/account"
                    android:layout_margin="25dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John doe"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="38dp"
                        />

                    <TextView
                        android:id="@+id/email_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John_doe@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/location_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yogyakarta"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            gra
            >

        <Button
            android:id="@+id/account_profile"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/profile_rectangle"
            android:alpha="0.8"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingStart="38dp"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out?"
            android:textSize="23dp"
            android:textColor="#A73333"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginTop="175dp"
            />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bar"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:background=""
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            />


        <ImageButton
            android:id="@+id/weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weather"
            android:background=""
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/donasi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/money"
            android:background=""
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:background=""
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>


</RelativeLayout>